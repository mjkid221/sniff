{
  "extends": "./node_modules/@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*", "./"],
      "@acme/gum-react-sdk": ["../../packages/gum-sdk/packages/react-sdk/src"],
      "@acme/gum-sdk": ["../../packages/gum-sdk/packages/gpl-core/src"]
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
